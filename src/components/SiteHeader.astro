<style>
  .site-header {
    position: sticky;
    top: 0;
    z-index: 50;
    background: var(--bg-card);
    border-bottom: 1px solid var(--border-primary);
    backdrop-filter: blur(8px);
    background-color: rgba(var(--bg-card-rgb, 255, 255, 255), 0.8);
  }

  [data-theme="dark"] .site-header {
    background-color: rgba(30, 41, 59, 0.8);
  }

  .site-header__container {
    max-width: var(--container-xl);
    margin: 0 auto;
    padding: 0 var(--space-lg);
  }

  .site-header__content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 64px;
    gap: var(--space-lg);
  }

  .site-header__brand {
    flex-shrink: 0;
  }

  .site-header__logo {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    text-decoration: none;
    color: var(--text-primary);
    font-weight: 600;
    font-size: 1.125rem;
    transition: color var(--transition-fast);
  }

  .site-header__logo:hover {
    color: var(--color-primary);
  }

  .site-header__logo-icon {
    font-size: 1.5rem;
    filter: drop-shadow(0 1px 2px rgba(0, 0, 0, 0.1));
  }

  .site-header__logo-text {
    user-select: none;
  }

  .site-header__nav {
    flex: 1;
    display: flex;
    justify-content: center;
  }

  .site-header__nav-list {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .site-header__nav-link {
    display: block;
    padding: var(--space-sm) var(--space-md);
    color: var(--text-secondary);
    text-decoration: none;
    font-weight: 500;
    border-radius: var(--radius-md);
    transition: all var(--transition-fast);
    position: relative;
  }

  .site-header__nav-link:hover {
    color: var(--text-primary);
    background: var(--bg-hover);
  }

  .site-header__nav-link[aria-current="page"] {
    color: var(--color-primary);
    background: rgba(59, 130, 246, 0.1);
  }

  .site-header__nav-link[aria-current="page"]::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 50%;
    transform: translateX(-50%);
    width: 20px;
    height: 2px;
    background: var(--color-primary);
    border-radius: 1px;
  }

  .site-header__actions {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
  }

  .site-header__theme-toggle {
    flex-shrink: 0;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .site-header__container {
      padding: 0 var(--space-md);
    }

    .site-header__content {
      height: 56px;
      gap: var(--space-md);
    }

    .site-header__logo-text {
      display: none;
    }

    .site-header__nav {
      flex: 1;
      justify-content: flex-start;
    }

    .site-header__nav-list {
      gap: var(--space-xs);
    }

    .site-header__nav-link {
      padding: var(--space-xs) var(--space-sm);
      font-size: 0.875rem;
    }
  }

  @media (max-width: 480px) {
    .site-header__content {
      gap: var(--space-sm);
    }

    .site-header__nav-link {
      padding: var(--space-xs);
    }

    .site-header__nav-link span {
      display: none;
    }
  }

  /* Animation for header appearance */
  @keyframes header-slide-down {
    from {
      transform: translateY(-100%);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  .site-header {
    animation: header-slide-down 0.3s ease-out;
  }
</style>