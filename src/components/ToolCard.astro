---
import type { Tool } from '@/types/tool';
import ToolCardClient from '@/components/ToolCardClient.astro';

export interface Props {
  tool: Tool;
  lazy?: boolean;
  preload?: boolean;
}

const { tool, lazy = true, preload = false } = Astro.props;

// Click functionality moved to client script
---

<article 
  class="tool-card"
  role="article"
  aria-label={`工具: ${tool.name}`}
  tabindex="0"
  data-tool-id={tool.id}
  data-category={tool.category}
>
  <div class="tool-card__content" data-tool-url={tool.url}>
    <!-- 工具图标 -->
    <div class="tool-card__icon-wrapper">
      {tool.icon ? (
        <img 
          src={tool.icon} 
          alt={`${tool.name}图标`}
          class="tool-card__icon"
          loading={lazy ? 'lazy' : 'eager'}
          decoding="async"
          width="48"
          height="48"
          {...(preload && { 'data-preload': true })}
        />
      ) : (
        <div class="tool-card__icon-fallback" aria-hidden="true">
          <span class="tool-card__icon-text">{tool.name.charAt(0)}</span>
        </div>
      )}
    </div>

    <!-- 工具信息 -->
    <div class="tool-card__info">
      <h3 class="tool-card__title">{tool.name}</h3>
      {tool.description && (
        <p class="tool-card__description">{tool.description}</p>
      )}
      <div class="tool-card__tags">
        {tool.tags.slice(0, 3).map((tag) => (
          <span class="tool-card__tag">{tag}</span>
        ))}
      </div>
    </div>

    <!-- 工具状态指示器 -->
    {tool.featured && (
      <div class="tool-card__featured" aria-label="推荐工具">
        <span class="tool-card__featured-icon">⭐</span>
      </div>
    )}
  </div>
</article>

<ToolCardClient />

<style>
  .tool-card {
    container-type: inline-size;
    container-name: tool-card;
    position: relative;
    background: var(--bg-card);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
    transition: all var(--transition-normal);
    cursor: pointer;
    overflow: hidden;
  }

  .tool-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
    border-color: var(--color-primary);
  }

  .tool-card:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }

  .tool-card__content {
    display: flex;
    align-items: flex-start;
    gap: var(--space-md);
    padding: var(--space-lg);
    height: 100%;
    min-height: 120px;
  }

  .tool-card__icon-wrapper {
    flex-shrink: 0;
    width: 48px;
    height: 48px;
    border-radius: var(--radius-md);
    overflow: hidden;
    background: var(--bg-secondary);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .tool-card__icon {
    width: 100%;
    height: 100%;
    object-fit: contain;
    transition: transform var(--transition-fast);
  }

  .tool-card:hover .tool-card__icon {
    transform: scale(1.1);
  }

  .tool-card__icon-fallback {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, var(--color-primary), var(--color-primary-dark));
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 600;
    font-size: 1.25rem;
  }

  .tool-card__icon-text {
    user-select: none;
  }

  .tool-card__info {
    flex: 1;
    min-width: 0;
  }

  .tool-card__title {
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0 0 var(--space-xs) 0;
    line-height: 1.3;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .tool-card__description {
    font-size: 0.875rem;
    color: var(--text-secondary);
    margin: 0 0 var(--space-sm) 0;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .tool-card__tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
    margin-top: auto;
  }

  .tool-card__tag {
    display: inline-block;
    padding: 0.125rem 0.375rem;
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--color-primary);
    background: rgba(59, 130, 246, 0.1);
    border-radius: var(--radius-sm);
    border: 1px solid rgba(59, 130, 246, 0.2);
  }

  .tool-card__featured {
    position: absolute;
    top: var(--space-sm);
    right: var(--space-sm);
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .tool-card__featured-icon {
    font-size: 0.875rem;
    filter: drop-shadow(0 1px 2px rgba(0, 0, 0, 0.1));
  }

  /* Container queries for responsive design */
  @container tool-card (max-width: 200px) {
    .tool-card__content {
      flex-direction: column;
      align-items: center;
      text-align: center;
      gap: var(--space-sm);
      padding: var(--space-md);
    }

    .tool-card__icon-wrapper {
      width: 40px;
      height: 40px;
    }

    .tool-card__title {
      font-size: 0.875rem;
    }

    .tool-card__description {
      font-size: 0.75rem;
      -webkit-line-clamp: 3;
    }

    .tool-card__tags {
      justify-content: center;
    }
  }

  @container tool-card (min-width: 300px) {
    .tool-card__content {
      padding: var(--space-xl);
    }

    .tool-card__icon-wrapper {
      width: 56px;
      height: 56px;
    }

    .tool-card__title {
      font-size: 1.125rem;
    }

    .tool-card__description {
      font-size: 0.9375rem;
    }
  }

  /* Animation for card entrance */
  @keyframes card-entrance {
    from {
      opacity: 0;
      transform: translateY(20px) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .tool-card {
    animation: card-entrance var(--transition-slow) ease-out;
  }
</style>